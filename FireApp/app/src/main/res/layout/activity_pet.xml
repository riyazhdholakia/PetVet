<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/valuefield1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Breed"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="74dp" />

    <EditText
        android:id="@+id/valuefield2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/valuefield1"
        tools:layout_editor_absoluteX="82dp" />

    <EditText
        android:id="@+id/valuefield3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="type"
        app:layout_constraintTop_toBottomOf="@+id/valuefield2"
        tools:layout_editor_absoluteX="73dp" />

    <Button
        android:id="@+id/addpetbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Submit Pet Info"
        app:layout_constraintTop_toBottomOf="@+id/valuefield3"
        tools:layout_editor_absoluteX="131dp" />

    <Button
        android:id="@+id/viewpetbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="View Pet Info"
        app:layout_constraintTop_toBottomOf="@+id/addpetbtn"
        tools:layout_editor_absoluteX="148dp" />
</android.support.constraint.ConstraintLayout>